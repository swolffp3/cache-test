name: Cleanup caches
on:
  workflow_dispatch:

jobs:
  cleanup:
    runs-on: ubuntu-latest
    permissions:
      actions: write
      contents: read
    steps:
      - name: Check out code
        uses: actions/checkout@v4

      - name: Cleanup
        run: gh actions-cache delete cache-data
        env:
          GH_TOKEN: ${{ secrets.GITHUB_TOKEN }}
